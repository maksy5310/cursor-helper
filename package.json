{
  "name": "cursor-session-helper",
  "publisher": "TS-SW2",
  "displayName": "Cursor Session Helper",
  "description": "支持提示词分享、提示词搜索、提示词收藏、提示词导出等功能",
  "icon": "resources/icon.png",
  "version": "1.0.28",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/maksy5310/cursor-helper.git"
  },
  "bugs": {
    "url": "https://github.com/maksy5310/cursor-helper/issues"
  },
  "homepage": "https://github.com/maksy5310/cursor-helper#readme",
  "keywords": [
    "cursor",
    "vscode",
    "assistant",
    "data-collection",
    "productivity"
  ],
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-session-helper.shareSession",
        "title": "分享会话",
        "category": "Cursor Session Helper"
      },
      {
        "command": "cursor-session-helper.startServer",
        "title": "启动本地服务器",
        "category": "Cursor Session Helper"
      },
      {
        "command": "cursor-session-helper.stopServer",
        "title": "停止本地服务器",
        "category": "Cursor Session Helper"
      },
      {
        "command": "cursor-session-helper.restartServer",
        "title": "重启本地服务器",
        "category": "Cursor Session Helper",
        "icon": "$(debug-restart)"
      },
      {
        "command": "cursor-session-helper.openWebUI",
        "title": "打开 WebUI 页面",
        "category": "Cursor Session Helper",
        "icon": "$(globe)"
      },
      {
        "command": "cursor-session-helper.diagnoseWorkspace",
        "title": "诊断工作空间路径",
        "category": "Cursor Session Helper"
      },
      {
        "command": "cursor-session-helper.scanWorkspaces",
        "title": "扫描所有工作空间",
        "category": "Cursor Session Helper"
      }
    ],
    "configuration": {
      "title": "Cursor Session Helper",
      "properties": {
        "cursorSessionHelper.nickname": {
          "type": "string",
          "default": "",
          "description": "显示的用户昵称。留空则使用当前系统用户名"
        },
        "cursorSessionHelper.avatar": {
          "type": "string",
          "default": "default",
          "description": "头像设置。可选值: default, robot, cat, dog, star，或本地图片绝对路径"
        },
        "cursorSessionHelper.shareDirectory": {
          "type": "string",
          "default": "",
          "description": "分享文件存储目录。为空时默认使用用户主目录下的 .cursor-session-helper/shares"
        },
        "cursorSessionHelper.autoStartServer": {
          "type": "boolean",
          "default": false,
          "description": "是否在插件激活时自动启动本地 Web 服务器"
        },
        "cursorSessionHelper.serverPort": {
          "type": "number",
          "default": 8080,
          "description": "本地 Web 服务器端口"
        },
        "cursorSessionHelper.shareBaseUrl": {
          "type": "string",
          "default": "",
          "description": "分享链接的基础 URL。为空时默认使用 http://localhost:{端口}。可设置为其他地址如 http://192.168.1.100:8080"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cursor-session-helper",
          "title": "Cursor Session Helper",
          "icon": "$(references)"
        }
      ]
    },
    "views": {
      "cursor-session-helper": [
        {
          "id": "cursor-session-helper.userInfo",
          "name": "基本信息",
          "when": "true"
        },
        {
          "id": "cursor-session-helper.sessionList",
          "name": "Sessions",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "cursor-session-helper.shareSession",
          "when": "view == cursor-session-helper.sessionList",
          "group": "share@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-config",
    "compile": "tsc -p ./",
    "copy-config": "node -e \"require('fs').cpSync('src/config.json', 'out/config.json')\"",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "version:patch": "node scripts/version-bump.js",
    "build": "npm run version:patch && npm run compile && npm run copy-config",
    "package": "npx vsce package -o ../../Output/",
    "start:server": "node out/web-server/server.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.19.26",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "express": "^4.21.0",
    "jose": "^5.0.0",
    "marked": "^15.0.0",
    "node-fetch": "^3.0.0",
    "uuid": "^11.0.0"
  }
}
